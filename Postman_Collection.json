{
  "info": {
    "_postman_id": "ntou-classroom-api",
    "name": "國立臺灣海洋大學教室預約系統 API",
    "description": "教室預約系統完整 API 測試集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"account\": \"test@example.com\",\n  \"password\": \"testpass123\",\n  \"name\": \"測試使用者\",\n  \"verification_code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", ""]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"account\": \"test@example.com\",\n  \"password\": \"testpass123\",\n  \"recaptcha_token\": \"test_token\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Classrooms",
      "item": [
        {
          "name": "Get Buildings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/buildings/",
              "host": ["{{base_url}}"],
              "path": ["api", "buildings", ""]
            }
          }
        },
        {
          "name": "Get Classrooms by Building",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/classrooms/?building={{building_code}}",
              "host": ["{{base_url}}"],
              "path": ["api", "classrooms", ""],
              "query": [
                {
                  "key": "building",
                  "value": "{{building_code}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Occupied Slots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reservations/occupied/?classroom={{classroom_code}}&date_from={{date_from}}&date_to={{date_to}}",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "occupied", ""],
              "query": [
                {
                  "key": "classroom",
                  "value": "{{classroom_code}}"
                },
                {
                  "key": "date_from",
                  "value": "{{date_from}}"
                },
                {
                  "key": "date_to",
                  "value": "{{date_to}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reservations (User)",
      "item": [
        {
          "name": "Create Reservation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"classroom\": \"{{classroom_code}}\",\n  \"date\": \"2025-12-25\",\n  \"time_slot\": \"14-15\",\n  \"reason\": \"課程教學\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reservations/",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", ""]
            }
          }
        },
        {
          "name": "Get My Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reservations/",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", ""]
            }
          }
        },
        {
          "name": "Cancel Reservation",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reservations/{{reservation_id}}/cancel/",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "{{reservation_id}}", "cancel", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Reservations (Admin)",
      "item": [
        {
          "name": "Get All Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reservations/?view_all=true",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", ""],
              "query": [
                {
                  "key": "view_all",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Reservation",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reservations/{{reservation_id}}/status/",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "{{reservation_id}}", "status", ""]
            }
          }
        },
        {
          "name": "Reject Reservation",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"rejected\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reservations/{{reservation_id}}/status/",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "{{reservation_id}}", "status", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Blacklist",
      "item": [
        {
          "name": "Check if Blacklisted",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/blacklist/check/",
              "host": ["{{base_url}}"],
              "path": ["api", "blacklist", "check", ""]
            }
          }
        },
        {
          "name": "Get All Blacklisted Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/blacklist/users/",
              "host": ["{{base_url}}"],
              "path": ["api", "blacklist", "users", ""]
            }
          }
        },
        {
          "name": "Ban User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": {{user_id}},\n  \"reason\": \"違反使用規則\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/blacklist/ban/",
              "host": ["{{base_url}}"],
              "path": ["api", "blacklist", "ban", ""]
            }
          }
        },
        {
          "name": "Unban User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/blacklist/unban/{{user_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "blacklist", "unban", "{{user_id}}", ""]
            }
          }
        }
      ]
    }
  ],
